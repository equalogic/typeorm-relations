{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {}
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
